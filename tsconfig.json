{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "outDir": "./dist/",
    "target": "ES2022",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "lib": ["esnext"],
    "strictNullChecks": false,
    "strict": true,
    "paths": { "@/*": ["./src/*"] },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
